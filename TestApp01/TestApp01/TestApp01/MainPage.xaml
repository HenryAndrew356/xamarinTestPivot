<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp01.MainPage">

    <StackLayout 
        BackgroundColor="Aquamarine"
        Padding="15,15,15,15"
        >
        <Label
            HorizontalOptions="Center"
            Text="WhatsappLinkedin"
            TextColor="Pink"
            FontSize="Large"
            />
        <Frame
            BackgroundColor="Aquamarine"
            BorderColor="Aquamarine"
            >
            <StackLayout
                BackgroundColor="Yellow"
                >
                <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6b/WhatsApp.svg/479px-WhatsApp.svg.png"
                       />
                <Label 
                    Text="Form for C.V"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    />
                <ListView>
                    <ListView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Perú</x:String>
                            <x:String>España</x:String>
                            <x:String>Colombia</x:String>
                            <x:String>Puerto Rico</x:String>
                        </x:Array>
                    </ListView.ItemsSource>
                </ListView>
                <Button 
                    Text="Go"
                    TextTransform="None"
                    />
            </StackLayout>
        </Frame>
    </StackLayout>


